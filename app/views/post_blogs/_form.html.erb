<div class="container mt-3">
  <div class="row">
    <%= form_with model:post_blog, local:true do |f| %>
    <div class="form-group">
      <%= f.label :image,"投稿画像" %><br>
      <%= f.attachment_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :title,"タイトル" %><br>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :body,"本文" %><br>
      <%= f.text_area :body, :placeholder => "ここに記事を記述します",cols: "80", rows: "10" %>
    </div>
    <div class="tag">
      <%= f.label :tag %>
      <%= f.text_field :name, value: @tag_list %>
    </div>
    <div class="text-center">
      <%= f.submit "新規投稿", class: "btn btn-lg btn-success "%>
    </div>
    <% end %>
  </div>
</div>