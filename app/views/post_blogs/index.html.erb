<div class="container">
  <h2>ランキングtop3</h2>
  <div class="row"></div>
<div class="container">
  <div class="row">
    <% @tag_list.each do |f| %>
      <p>
        <%= link_to f.name, post_blogs_path(tag_id: f.id) %>
        (<%= f.post_blogs.all.count %>)
      </p>
    <% end %>
  </div>
</div>

  <h2>新着投稿</h2><br>
  <% @post_blogs.each do |f|%>
  <div class="row mb-3">
    <div class="col-md-4 border border-dark">
      <div class="img-body">
        <%= attachment_image_tag f, :image, size: "200x150" %>
      </div>
    </div>
    <div class="col-md-8 border border-dark ">
      <div class="card-body">
        <h5 class="card-title"><%= f.title %></h5>
        <p class="card-text"><%= f.body %></p>
        <p><%= link_to "コメント数 #{f.post_comments.count} ", post_blog_path(f.id) %></p>
        <% if f.favorited_by?(current_user) %>
        <p>
          <%= link_to post_blog_favorites_path(f), method: :delete do %>
            いいね <%= f.favorites.count %>♥
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to post_blog_favorites_path(f), method: :post do %>
            いいね <%= f.favorites.count %>♡
          <% end %>
        </p>
        <% end %>
        <% f.tags.each do |t| %>
        <p class="tag"><%= link_to t.name, post_blogs_path(tag_id: t.id) %></p>
        <% end %>
        <p class="card-text"><small class="text-muted"></small></p>
        <%= link_to "詳細へ", post_blog_path(f.id) %>
      </div>
    </div>
  </div>
  <% end %>
</div>
