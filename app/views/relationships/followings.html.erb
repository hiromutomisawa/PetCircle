<h1>フォロー一覧</h1>
<div class="container">
  <h2>プロフィール</h2>
  <% @users. each do |f| %>
  <div class="row">
    <div class="col-2 bg-primary"><%= attachment_image_tag f, :profile_image, size: "150x150" %></div>
    <div class="col-8 bg-success">
      <h5>ニックネーム</h5>
      <div class="row"><%= f.name %></div>
      <h5>自己紹介</h5>
      <div class="row"><%= f.introduction %></div>
    </div>
    <div class="col-2 ">
      <%= link_to "詳細へ",user_path(f.id) %>
    </div>
  </div>
  <% end %>
</div>