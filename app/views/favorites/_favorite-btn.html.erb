<% if post_blog.favorited_by?(current_user) %>
  <%= link_to post_blog_favorites_path(post_blog), method: :delete do %>
    いいね<%= post_blog.favorites.count %>♥
  <% end %>
<% else %>
  <%= link_to post_blog_favorites_path(post_blog), method: :post do %>
    いいね<%= post_blog.favorites.count %>♡
  <% end %>
<% end %>