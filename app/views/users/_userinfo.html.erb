 <%= attachment_image_tag user, :profile_image, size: "150x150", class: "mx-auto d-block" %>
  <table class="table" style="width:15rem;">
    <tr>
      <th class="text-nowrap"><small>ニックネーム</small></th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th class="text-nowrap"><small>自己紹介</small></th>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th class="text-nowrap"><small>フォロー</small></th>
      <td><%= link_to user.followings.count, user_followings_path(user) %></td>
    </tr>
    <tr>
      <th class="text-nowrap"><small>フォロワー</small></th>
      <td><%= link_to user.followers.count, user_followers_path(user) %></td>
    </tr>
  </table>
    <div class="row">
      <div class="col">
        <% if current_user != user %>
          <% if current_user.following?(user) %>
            <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
          <% end %>
        <% else %>
            <%= link_to "編集はこちら",edit_user_path(current_user), class:"btn btn-outline-secondary btn-block fas edit_user_id" %>
        <% end %>
      </div>
    </div>